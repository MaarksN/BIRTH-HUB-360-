// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id          String   @id @default(uuid())
  name        String
  domain      String?  @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  users       User[]
  roles       Role[]
  companies   Company[]
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  name        String?
  password    String?  // If using credential auth, otherwise handled by Clerk/NextAuth
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
  roleId      String?
  role        Role?    @relation(fields: [roleId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  logs        Log[]
  ldrRequests LdrRequest[]
}

model Role {
  id          String       @id @default(uuid())
  name        String
  description String?
  tenantId    String
  tenant      Tenant       @relation(fields: [tenantId], references: [id])
  permissions Permission[]
  users       User[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@unique([name, tenantId])
}

model Permission {
  id          String   @id @default(uuid())
  action      String   // e.g., "create", "read", "update", "delete"
  resource    String   // e.g., "lead", "deal", "user"
  roles       Role[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Log {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  action      String
  details     Json?
  createdAt   DateTime @default(now())
}

// --- LDR Module Models ---

model Company {
  id            String   @id @default(uuid())
  name          String
  cnpj          String?  @unique
  cnae          String?
  industry      String?
  status        String?  // Active, Inactive
  tenantId      String
  tenant        Tenant   @relation(fields: [tenantId], references: [id])
  qualityScore  DataQualityScore?

  // BDR Extensions
  techStack     Json?    // List of technologies detected
  competitors   Json?    // List of identified competitors
  maturityScore Float?
  contacts      Contact[]
  accountPlans  AccountPlan[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model LdrRequest {
  id          String   @id @default(uuid())
  toolName    String   // e.g., "enrich_cnpj"
  inputData   Json
  outputData  Json?
  status      String   // pending, completed, failed
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}

model DataQualityScore {
  id          String   @id @default(uuid())
  score       Float
  details     Json?    // Breakdown of the score
  companyId   String   @unique
  company     Company  @relation(fields: [companyId], references: [id])
  updatedAt   DateTime @updatedAt
}

// --- BDR Module Models ---

model Contact {
  id              String   @id @default(uuid())
  name            String
  email           String?
  phone           String?
  jobTitle        String?
  linkedIn        String?
  influenceLevel  String?  // e.g., "Decision Maker", "Influencer", "Blocker"
  isBlocker       Boolean  @default(false)
  companyId       String
  company         Company  @relation(fields: [companyId], references: [id])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model AccountPlan {
  id          String   @id @default(uuid())
  strategy    String?  // Text description of entry strategy
  goals       Json?    // List of goals
  status      String   // Draft, Active, Completed
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model OutboundSequence {
  id          String   @id @default(uuid())
  name        String
  steps       Json     // Array of steps (email, call, linkedin)
  status      String   // Active, Paused, Draft
  tenantId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
