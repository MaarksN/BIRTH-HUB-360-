// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id          String   @id @default(uuid())
  name        String
  domain      String?  @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  users       User[]
  roles       Role[]
  companies   Company[]
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  name        String?
  password    String?  // If using credential auth, otherwise handled by Clerk/NextAuth
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
  roleId      String?
  role        Role?    @relation(fields: [roleId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  logs        Log[]
  ldrRequests LdrRequest[]
}

model Role {
  id          String       @id @default(uuid())
  name        String
  description String?
  tenantId    String
  tenant      Tenant       @relation(fields: [tenantId], references: [id])
  permissions Permission[]
  users       User[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@unique([name, tenantId])
}

model Permission {
  id          String   @id @default(uuid())
  action      String   // e.g., "create", "read", "update", "delete"
  resource    String   // e.g., "lead", "deal", "user"
  roles       Role[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Log {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  action      String
  details     Json?
  createdAt   DateTime @default(now())
}

// --- LDR Module Models ---

model Company {
  id            String   @id @default(uuid())
  name          String
  cnpj          String?  @unique
  cnae          String?
  industry      String?
  status        String?  // Active, Inactive
  tenantId      String
  tenant        Tenant   @relation(fields: [tenantId], references: [id])
  qualityScore  DataQualityScore?

  // BDR Extensions
  techStack     Json?    // List of technologies detected
  competitors   Json?    // List of identified competitors
  maturityScore Float?
  contacts      Contact[]
  accountPlans  AccountPlan[]
  deals         Deal[]

  // Onboarding Extensions
  onboardingProjects OnboardingProject[]

  // CS Extensions
  successPlans  SuccessPlan[]
  healthChecks  HealthCheck[]

  // Support Extensions
  tickets       Ticket[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model LdrRequest {
  id          String   @id @default(uuid())
  toolName    String   // e.g., "enrich_cnpj"
  inputData   Json
  outputData  Json?
  status      String   // pending, completed, failed
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}

model DataQualityScore {
  id          String   @id @default(uuid())
  score       Float
  details     Json?    // Breakdown of the score
  companyId   String   @unique
  company     Company  @relation(fields: [companyId], references: [id])
  updatedAt   DateTime @updatedAt
}

// --- BDR Module Models ---

model Contact {
  id              String   @id @default(uuid())
  name            String
  email           String?
  phone           String?
  jobTitle        String?
  linkedIn        String?
  influenceLevel  String?  // e.g., "Decision Maker", "Influencer", "Blocker"
  isBlocker       Boolean  @default(false)
  companyId       String?  // Optional because a Lead might not be linked to a Company yet
  company         Company? @relation(fields: [companyId], references: [id])

  // SDR Extensions
  leadScore       Float?
  lastInteraction DateTime?
  status          String?  // New, Contacted, Qualified, Lost
  source          String?  // Inbound, Outbound, Event
  leads           Lead[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model AccountPlan {
  id          String   @id @default(uuid())
  strategy    String?  // Text description of entry strategy
  goals       Json?    // List of goals
  status      String   // Draft, Active, Completed
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model OutboundSequence {
  id          String   @id @default(uuid())
  name        String
  steps       Json     // Array of steps (email, call, linkedin)
  status      String   // Active, Paused, Draft
  tenantId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// --- SDR Module Models ---

model Lead {
  id              String   @id @default(uuid())
  contactId       String
  contact         Contact  @relation(fields: [contactId], references: [id])
  intentScore     Float?
  channel         String?  // Web, Email, LinkedIn
  objections      Json?    // List of detected objections
  nextFollowUp    DateTime?
  sdrMetrics      SdrMetrics?
  deals           Deal[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model SdrMetrics {
  id              String   @id @default(uuid())
  responseTime    Int?     // In minutes
  touchpoints     Int      @default(0)
  conversionRate  Float?
  leadId          String   @unique
  lead            Lead     @relation(fields: [leadId], references: [id])
  updatedAt       DateTime @updatedAt
}

model Cadence {
  id          String   @id @default(uuid())
  name        String
  type        String   // Inbound, Nurture
  steps       Json
  isActive    Boolean  @default(true)
  tenantId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// --- AE Module Models ---

model Deal {
  id          String    @id @default(uuid())
  name        String
  amount      Decimal?
  stage       String    // Discovery, Proposal, Negotiation, Closed Won, Closed Lost
  probability Float?
  closeDate   DateTime?
  companyId   String?
  company     Company?  @relation(fields: [companyId], references: [id])
  leadId      String?
  lead        Lead?     @relation(fields: [leadId], references: [id])
  proposals   Proposal[]
  meetings    Meeting[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Proposal {
  id          String   @id @default(uuid())
  content     Json?    // Structured content of the proposal
  version     Int      @default(1)
  status      String   // Draft, Sent, Accepted, Rejected
  dealId      String
  deal        Deal     @relation(fields: [dealId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Meeting {
  id            String   @id @default(uuid())
  title         String
  date          DateTime
  transcript    String?
  summary       String?
  participants  Json?    // List of attendees
  dealId        String?
  deal          Deal?    @relation(fields: [dealId], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// --- Onboarding Module Models ---

model OnboardingProject {
  id            String    @id @default(uuid())
  status        String    // Not Started, In Progress, Completed, Delayed
  startDate     DateTime?
  endDate       DateTime?
  progress      Float     @default(0)
  companyId     String
  company       Company   @relation(fields: [companyId], references: [id])
  tasks         ProjectTask[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model ProjectTask {
  id          String   @id @default(uuid())
  name        String
  description String?
  status      String   // Pending, Done
  dueDate     DateTime?
  projectId   String
  project     OnboardingProject @relation(fields: [projectId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// --- Customer Success Module Models ---

model SuccessPlan {
  id          String   @id @default(uuid())
  objectives  Json?    // List of objectives
  status      String   // Active, Completed
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model HealthCheck {
  id          String   @id @default(uuid())
  score       Float
  riskLevel   String   // Low, Medium, High
  notes       String?
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  createdAt   DateTime @default(now())
}

// --- Support Module Models ---

model Ticket {
  id          String   @id @default(uuid())
  subject     String
  priority    String   // Low, Medium, High, Critical
  status      String   // Open, In Progress, Resolved
  category    String?  // Bug, Feature Request, etc.
  companyId   String?
  company     Company? @relation(fields: [companyId], references: [id])
  messages    TicketMessage[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TicketMessage {
  id          String   @id @default(uuid())
  content     String
  isInternal  Boolean  @default(false)
  ticketId    String
  ticket      Ticket   @relation(fields: [ticketId], references: [id])
  createdAt   DateTime @default(now())
}
